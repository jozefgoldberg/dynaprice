{# src/Dpp/CustomersBundle/Resources/views/Customer/customerList.html.twig #}
 
{% extends "DppCustomersBundle::layout.html.twig" %}

{% block title %}
    Liste  - {{ parent() }}
{% endblock %}

{% block Dpp_body %}
<div class="row">
    <h3 class="txtcentre">{{ 'Dpp.customer.liste'|trans }}</h3>
</div>
<div class="row">
    <div class="span2"></div>
    <div class="span8">
        {% if customers %}
            <table class="table-bordered" >
                <thead>
                    <tr>
                        <th class="span2">{{ 'Dpp.customer.name'|trans }}</th>
                        <th class="span2">{{ 'Dpp.customer.domaine'|trans }}</th>
                        <th class="span2">{{ 'Dpp.customer.short.pricingType'|trans }}</th>
                        <th class="span1">Actions</th>
                    </tr>
                </thead>   
                <tbody>
                {% for customer in customers %}
                <tr>
                    <td>{{ customer.name }}</td>
                    <td>{{ customer.domaine }}</td>
                    <td>{{ customer.pricingAsString|trans }}</td>
                    <td>
                        <a href="{{ path('dpp_customers_delete', {'customerRef': customer.domaine }) }}" onclick=""return(confirm('{{ "Dpp.global.confirm_delete"|trans}}' ))"" >delete</a>
                        <a href="{{ path('dpp_customers_update', {'customerRef': customer.domaine }) }}" >edit</a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table><br>
        {% else %}
            {{ 'Dpp.customer.notfound'|trans }}
        {% endif %}
    </div>
</div>
<div class="row">
        <div class="span9"> </div>
        <div class="span3">
            <a href="{{ path('dpp_customers_add') }}" class="btn">{{ 'Dpp.customer.add_buton'|trans }}</a>
        </div>
        <br><br><br><br>
</div> 
{% endblock %}
  
